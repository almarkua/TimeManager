@model TimeManager.Models.LoginViewModel
@if (!ViewBag.IsAuthorized)
{
    <div class="well authorization-well">
        <div class="panel-heading well-header">
            Авторизація
        </div>
        <form class="form-horizontal">
            <div class="form-group authorization-group">
                <ul class="text-danger nomargin" id="CustomErrors"></ul>
                <div class="col-md-12">
                    @Html.EditorFor(m => m.UserName, new {htmlAttributes = new {@class = "form-control", placeholder = "Введіть e-mail"}})
                    <span class="text-danger" id="UserNameError"></span>
                </div>
            </div>
            <div class="form-group authorization-group">
                <div class="col-md-12">
                    @Html.EditorFor(m => m.Password, new {htmlAttributes = new {@class = "form-control", placeholder = "Введіть пароль", type = "password"}})
                    <span class="text-danger" id="PasswordError"></span>
                </div>
            </div>
            <div class="form-group authorization-group">
                <div class="col-md-12">
                    <button id="SignInButton" class="btn btn-info form-control">Ввійти</button>
                </div>
            </div>
        </form>
        <div class="panel-footer authorization-footer">
            @Html.ActionLink("Реєстрація","Register","Account")
            @Html.ActionLink("Забули пароль?", "ForgotPassword", "Account",null,new {@class = "pull-right"})
        </div>
    </div>
    <!--end authorization well-->
}
else
{
    <div class="well user-well">
        <div class="panel-heading well-header">
            Користувач
        </div>
        <div>Вітаємо, <a href="#">Олександр</a>!</div>
        <div>@Html.ActionLink("Вийти", "SignOut", "Account")</div>
    </div>
}